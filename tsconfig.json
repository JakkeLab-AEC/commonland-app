{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "esModuleInterop": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts", "src/main.ts", "src/renderer.ts", "src/rendererArea/components/status/statusLabel.tsx"],
  "exclude": ["node_modules"]
}